@model IEnumerable<RedeSocial.Domain.Entities.Friendship>
@using System.Security.Claims;

@{
    ViewData["Title"] = "Index";
}

<h2>Meus amigos</h2>
<hr/>

<div class="d-flex flex-row gap-5 flex-wrap mt-4">
@foreach (var item in Model)
{
    @if (item.IdProfileA.ToString() != Guid.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)).ToString()) {
    <div style="height: 380px">
        <div class="card text-center" style="width: 14rem; height: 300px">
            <img class="card-img-top" src="@item.ProfileA.Foto" style="height: 200px; object-fit: cover" alt="Foto de Perfil">
            <div class="card-body">
                <h5 class="card-title">@item.ProfileA.Nome @item.ProfileA.Sobrenome</h5>
                <a class="btn btn-light rounded-pill" asp-action="Details" asp-route-id="@item.ProfileA.IdProfile">Visitar perfil</a>
          </div>
        </div>
    </div>
    }
    @if (item.IdProfileB.ToString() != Guid.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)).ToString()) {
        <div style="height: 380px">
            <div class="card text-center" style="width: 14rem; height: 300px">
                <img class="card-img-top" src="@item.ProfileB.Foto" style="height: 200px; object-fit: cover" alt="Foto de Perfil">
                <div class="card-body">
                    <h5 class="card-title">@item.ProfileB.Nome @item.ProfileB.Sobrenome</h5>
                    <a class="btn btn-light rounded-pill" asp-action="Details" asp-route-id="@item.ProfileB.IdProfile">Visitar perfil</a>
              </div>
            </div>
        </div>
    }
}
</div>
