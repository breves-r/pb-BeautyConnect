@model RedeSocial.Domain.Entities.Profile

@{
    ViewData["Title"] = "Meu Perfil";
}

<h1>Meu Perfil</h1>

<h4>Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProfile" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" asp-for="Foto" class="form-control" accept="image/png, .jpeg, .jpg"/>
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@Model?.IdProfile">Delete</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para o perfil</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
