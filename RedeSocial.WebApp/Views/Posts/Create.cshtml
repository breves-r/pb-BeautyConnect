@model RedeSocial.Domain.Entities.Post

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Fazer uma nova publicação</h1>

<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control"/>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagem" class="control-label mt-2"></label>
                <input type="file" asp-for="Imagem" class="form-control" accept="image/png, .jpeg, .jpg"/>
                <span asp-validation-for="Imagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Produto" class="control-label mt-2"></label>
                <input asp-for="Produto" class="form-control" />
                <span asp-validation-for="Produto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label mt-2"></label>
                <input asp-for="Categoria" class="form-control" />
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group mt-4 d-flex justify-content-center">
                <input type="submit" value="Publicar" class="btn btn-primary rounded-pill"  style="width: 65%"/>
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index">Voltar para o feed</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
