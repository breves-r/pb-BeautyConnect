@using System.Security.Claims;
@model IEnumerable<RedeSocial.Domain.Entities.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Feed</h1>

<p>
    <a asp-action="Create">Adicionar novno post</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                <img src="@item.Imagem" style="max-width:350px; height:auto">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Produto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
                @if (item.Profile.IdProfile.ToString() == Guid.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier)).ToString())
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a asp-action = "Details" asp-route-id = "@item.Id" > Details </a>
                        <a asp-action = "Delete" asp-route-id = "@item.Id" > Delete </a>
                    </td>
                }
        </tr>
}
    </tbody>
</table>
