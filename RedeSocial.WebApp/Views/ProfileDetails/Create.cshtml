@model RedeSocial.Domain.Entities.ProfileDetails

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center">Adicionar informações pessoais</h2>
<hr />
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ProfileId" type="hidden" />
            <div class="form-group">
                <label asp-for="Aniversario" class="control-label"></label>
                <input type="date" asp-for="Aniversario" class="form-control" />
                <span asp-validation-for="Aniversario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoPele" class="control-label mt-3"></label>
                <input asp-for="TipoPele" class="form-control" />
                <span asp-validation-for="TipoPele" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoCabelo" class="control-label mt-3"></label>
                <input asp-for="TipoCabelo" class="form-control" />
                <span asp-validation-for="TipoCabelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorPele" class="control-label mt-3"></label>
                <input asp-for="CorPele" class="form-control" />
                <span asp-validation-for="CorPele" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CorCabelo" class="control-label mt-3"></label>
                <input asp-for="CorCabelo" class="form-control" />
                <span asp-validation-for="CorCabelo" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 d-flex justify-content-center">
                <input type="submit" value="Create" style="width:50%" class="btn btn-primary rounded-pill" />
            </div>
        </form>
    </div>
</div>

<divc class="mt-4">
    <a asp-action="Index">Back to Details</a>
</divc>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
